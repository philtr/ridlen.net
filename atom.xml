layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>The Ridlens</title>
 <link href="http://ridlen.net/atom.xml" rel="self"/>
 <link href="http://ridlen.net/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://ridlen.net/</id>
 <author>
   <name>Phillip Ridlen</name>
   <email>phillip@ridlen.net</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://ridlen.net{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://ridlen.net{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>